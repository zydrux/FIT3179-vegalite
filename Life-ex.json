{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 800,
  "height": 600,
  "layer":[
    {
      "projection":{"type": "mercator"},
      "data": {
        "url": "https://raw.githubusercontent.com/zydrux/FIT3179-vegalite/main/custom.geo%20(1).json",
        "format":{
          "type": "topojson",
          "feature": "Ass-2-map"
        }
      },
      "transform": [
        {
          "lookup": "properties.admin",
          "from":{
            "data":{"url":"https://raw.githubusercontent.com/zydrux/FIT3179-vegalite/main/Life%20Expectancy%20Data.csv"},
            "key": "Country",
            "fields": ["Schooling", "Life expectancy", "Adult Mortality"]
          }
        }      ],
      "mark": {"type":"geoshape", "stroke": "white"},
      "encoding": {
         "color": {"field": "Life expectancy", "type":"quantitative"},
         "tooltip":[
           {"field": "properties.name", "type": "nominal", "title":"Country"},
           {"field": "Life expectancy", "type": "quantitative", "title": "Life expectancy"}
         ]
      }
    }
  ]
}
